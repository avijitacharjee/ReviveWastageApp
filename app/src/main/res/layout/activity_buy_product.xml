<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_1"
    tools:context=".BuyProduct">

    <FrameLayout
        android:id="@+id/buyer_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bn"/>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bn"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        app:menu="@menu/bottom_nav_menu"
        android:foregroundTint="@color/white_1"
        app:itemTextColor="@color/white_1"
        app:itemIconTint="@color/white_1"
        app:itemRippleColor="@color/white_1"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>